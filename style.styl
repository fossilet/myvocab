div.ext-link
  padding-left 19px

a.ext-link
  background-size 13px 13px
  background-color white  // Same with the site background
  background-repeat no-repeat
  padding 0 1em 0 1em
  font-size 13px

// Menu stolen from: http://cssdeck.com/labs/another-simple-css3-dropdown-menu
ul
  &.menu
    font-size 13px
    color #666  // Same with the site text color
    padding 2px
    display inline
    list-style none
  li
    &.menu
      line-height 20px  // Align "more" with buttons.
      display inline-block
      position relative
    ul
      width: 185px
      z-index: 5  // Menu in the front.
      &.submenu
        display none
        visibility hidden
        position absolute
        padding 0
        background-color: white
        border 1px solid rgba(100,100,100, .4)
        border-radius 3px !important
        .tbutton
          float: none // For one button per line.
      li
        &.submenu
          list-style none
          display block
        a
          margin 6px 3px 6px 3px !important  //Override site .tbutton style
    &:hover
      ul
        &.submenu
          display block
          visibility: visible
